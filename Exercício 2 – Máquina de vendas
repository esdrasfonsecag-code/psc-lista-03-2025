import java.util.Scanner;

public class Exercicio2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Informe o valor da compra: R$ ");
        int compra = sc.nextInt();

        System.out.print("Informe o valor pago: R$ ");
        int pago = sc.nextInt();

        if(pago < compra) {
            System.out.println("⚠️ Quantia insuficiente para realizar a compra.");
        } else {
            int troco = pago - compra;
            System.out.println("Troco: R$ " + troco);

            int[] notas = {50, 20, 10, 5, 2, 1};
            for(int nota : notas) {
                int qtd = troco / nota;
                System.out.println("Notas de R$" + nota + ": " + qtd);
                troco %= nota;
            }
        }

        sc.close();
    }
}
